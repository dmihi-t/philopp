<%= @title.title %>
<% @comments.each do |comment| %>
<div class="comment">
    <div class="upper-comment">
        <div class="comment-user">
          <%= comment.user.nickname%>
        </div>
        <div class="comment-date">
          <%= comment.created_at%>
        </div>
    </div>

    <div class="lower-comment">
        <div class="comment-content">
          <%= comment.comment %>
        </div>
    </div>
</div>
<% end %>

<%= form_with model: [@title, @comment], url:liberty_title_comments_path, local: true do |f| %>
  <div class="form-input">
    <%= f.text_area :comment, class: 'form-message', placeholder: 'type a message' %>
  </div>
  <%= f.submit '我思う故に我送信', class: 'form-submit' %>
<% end %>
